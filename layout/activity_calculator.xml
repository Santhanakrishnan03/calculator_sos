<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#8C0073"
    android:gravity="center">

    <TextView android:id="@+id/tvDisplay" android:layout_width="match_parent" android:layout_height="100dp"
        android:background="#FFFFFF" android:gravity="end|center_vertical" android:padding="15dp" android:text="0" android:textSize="30sp" />

    <Button android:id="@+id/btnQR" android:layout_width="match_parent" android:layout_height="80dp"
        android:text="GENERATE EMERGENCY QR" android:backgroundTint="#4CAF50" android:textSize="18sp" android:layout_marginTop="20dp"/>
</LinearLayout>
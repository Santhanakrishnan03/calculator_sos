<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:padding="20dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button android:id="@+id/btnAC" style="@style/CalcBtn.Operator" android:layout_width="0dp" android:layout_columnWeight="1" android:text="AC" />
        <Button android:id="@+id/btnDel" style="@style/CalcBtn.Operator" android:layout_width="0dp" android:layout_columnWeight="1" android:text="⌫" />
        <Button android:id="@+id/btnPercent" style="@style/CalcBtn.Operator" android:layout_width="0dp" android:layout_columnWeight="1" android:text="%" />
        <Button android:id="@+id/btnDiv" style="@style/CalcBtn.Operator" android:layout_width="0dp" android:layout_columnWeight="1" android:text="÷" />

        <Button android:id="@+id/btn7" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="7" />
        <Button android:id="@+id/btn8" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="8" />
        <Button android:id="@+id/btn9" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="9" />
        <Button android:id="@+id/btnMul" style="@style/CalcBtn.Operator" android:layout_width="0dp" android:layout_columnWeight="1" android:text="×" />

        <Button android:id="@+id/btn4" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="4" />
        <Button android:id="@+id/btn5" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="5" />
        <Button android:id="@+id/btn6" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="6" />
        <Button android:id="@+id/btnSub" style="@style/CalcBtn.Operator" android:layout_width="0dp" android:layout_columnWeight="1" android:text="-" />

        <Button android:id="@+id/btn1" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="1" />
        <Button android:id="@+id/btn2" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="2" />
        <Button android:id="@+id/btn3" style="@style/CalcBtn.Number" android:layout_width="0dp" android:layout_columnWeight="1" android:text="3" />
        <Button android:id="@+id/btnAdd" style="@style/CalcBtn.Operator" android:layout_width="0dp" android:layout_columnWeight="1" android:text="+" />

        <Button
            android:id="@+id/btn0"
            style="@style/CalcBtn.Number"
            android:layout_width="0dp"
            android:layout_height="99dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            style="@style/CalcBtn.Number"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_columnWeight="1"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="33dp"
            android:layout_height="106dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF9F0A"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </GridLayout>
</LinearLayout>